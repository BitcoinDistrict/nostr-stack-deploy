[Unit]
Description=Relay Dashboard Static Files
After=network.target

[Service]
Type=oneshot
EnvironmentFile=/home/deploy/nostr-stack-deploy/configs/dashboard/dashboard.env
ExecStart=/usr/bin/mkdir -p /var/www/relay-dashboard
ExecStart=/usr/bin/bash -lc 'if [ ! -f /var/www/relay-dashboard/index.html ]; then cp -r /home/deploy/nostr-stack-deploy/web/relay-dashboard/* /var/www/relay-dashboard/; fi'
ExecStartPost=/usr/bin/chown -R deploy:deploy /var/www/relay-dashboard
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target


